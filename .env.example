# =============================================================================
# HLS Player API Configuration
# =============================================================================

# Server
NODE_ENV=production
PORT=3000
API_PORT=3000

# CORS
CORS_ORIGIN=*

# Nginx ports
HTTP_PORT=80
HTTPS_PORT=443

# File paths (for Docker volumes)
OUTPUT_PATH=./output
INPUT_PATH=./input

# Limits
MAX_UPLOAD_SIZE=10gb
MAX_CONCURRENT_JOBS=4

# FFmpeg settings
FFMPEG_THREADS=0
SEGMENT_DURATION=4
VIDEO_PRESET=medium
VIDEO_CRF=23
AUDIO_BITRATE=192k
